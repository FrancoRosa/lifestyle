<p id="notice"><%= notice %></p>

<p>
  <strong>Autor:</strong>
  <%= @article.author_id %>
</p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>
<% if @article.image.attached? %>
  <p>
    <strong>Image:</strong>
    <%= image_tag @article.image.variant(resize_to_limit: [300, 300]) %>
  </p>
<% end %>
<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
