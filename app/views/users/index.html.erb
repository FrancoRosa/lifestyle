<section class="container">
  <div class="new-form">
    <div>
      <h1 class="text-white">USERS</h1>
      <hr>
    </div>
    <table class="items"> 
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-orange"   %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
  </div>
</section>
